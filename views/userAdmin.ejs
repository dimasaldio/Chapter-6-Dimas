<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <title>Game Suit</title>
</head>
<body>

    <div class="container">
        <div class="box-navi d-flex-justify-between">
            <a href="/" class="border-shadow">
                <span class="text-gradient btn btn btn-outline-danger">Log Out <i class="fa-solid fa-arrow-right-from-bracket"></i></span>
            </a>
        </div>
        
        <!-- form handling -->
        <form action="/" method="post">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>Token ID</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Password</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Gender</th>
                        <th>Age</th>
                        <th>Total Score</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0;i<users.length;i++){ %>
                    <tr>
                        <td><%= users[i]._id %></td>
                        <td><%= users[i].username %></td>
                        <td><%= users[i].email %></td>
                        <td><%= users[i].password %></td>
                        <td><%= users[i].firstName %></td>
                        <td><%= users[i].lastName %></td>
                        <td><%= users[i].gender %></td>
                        <td><%= users[i].age %></td>
                        <td><%= users[i].totalScore %></td>
                        <td>
                            <a href="/update-user?id=<%= users[i]._id %>" class="btn border-shadow update">
                                <span class="text-gradient btn btn-outline-warning" ><i class="fas fa-pencil-alt"></i></span>
                            </a>
                            <a href="#" class="btn border-shadow delete" data-id="<%= users[i]._id %>">
                                <span class="text-gradient btn btn-outline-danger" ><i class="fas fa-times"></i></span>
                            </a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </form>
    </div>


    
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>

    <script src="/js/index.js"></script>
</body>
</html>